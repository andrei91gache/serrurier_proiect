{% trans_default_domain 'FOSUserBundle' %}

<div class="col-sm-6 col-md-4 col-md-offset-4">
    <div class="account-wall">
        {% if error %}
            <div class="alert alert-danger" role="alert">
               Connexion Echoue.
            </div>
        {% endif %}
        {% image '@BackOfficeBundle/Resources/public/img/secure.png' %}
            <img class="profile-img" src="{{ asset_url }}" alt="Example" />
        {% endimage %}
        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Indentifiant"/>
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Mot de Passe" />
            <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Connexion" />
            <label class="checkbox pull-left">
                <input  type="checkbox" id="remember_me" name="_remember_me" value="on" />
                Remember me
            </label>
        </form>
    </div>
</div>
